<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/tvResultImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="center"
        android:contentDescription="Result Image"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Result: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvRecyclable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recyclable: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvWasteType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waste Type: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <com.example.capstoneproject.CustomButton.ButtonBack
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"/>

</LinearLayout>